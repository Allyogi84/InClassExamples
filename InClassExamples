using System;

namespace InClassExamples
{
    class Program
    {
        static void Main(string[] args)
        {
            var teacherAge = 33;
            var score = 98;

            var sentence1 = "hello my age is " + teacherAge + " years old";


            //string interpelation
            var sentence = $"Hello my age is {teacherAge} years old and I got a {score} on my exam";

            Console.WriteLine(sentence);

        }
    }
}
